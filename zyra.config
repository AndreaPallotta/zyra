# Zyra Project Config (v0)

project:
  name: zyra-app

paths:
  # Directory containing your .zy source files
  src: src

  # Output directory for emitted JS
  out: dist

  # Module root that @/ maps to (absolute within project)
  # If omitted, defaults to paths.src
  module_root: src

build:
  # ESM is the only v0 output mode (browser-native)
  target: browser-esm

  # Entry file (relative to module_root, extension optional)
  entry: main

  # Emit sourcemaps for debugging in browser devtools
  sourcemap: true

  # Emit .d.ts for editor tooling (optional; can be added later)
  emit_dts: false

strict:
  # These are effectively core language guarantees.
  # Keeping them in config still helps future "relaxed mode" experiments,
  # but v0 treats most of these as always-on.
  no_unused: true
  no_truthy: true
  no_undefined: true
  no_forgotten_promises: true
  exhaustive_match_enums: true

features:
  # Optional niceties that remain zero-runtime
  pipeline_placeholder: true   # enables `_` in `|>`
  await_nullable: true         # enables `await?`
  int_division: true           # enables `//` for Int division

interop:
  # Controls how Zyra resolves imports that refer to JS files
  # (Useful if you want to import native JS modules directly.)
  allow_js_imports: true
  js_extensions:
    - .js
    - .mjs

output:
  # Emitted JS file extension
  extension: .js
